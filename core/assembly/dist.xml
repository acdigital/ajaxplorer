<assembly xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src</directory>
			<includes>
				<include>*.php</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>client</outputDirectory>
			<directory>src/client</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>plugins</outputDirectory>
			<directory>src/plugins</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>server/classes</outputDirectory>
			<directory>src/server/classes</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>server/conf</outputDirectory>
			<directory>src/server/conf</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>server/users</outputDirectory>
			<directory>src/server/users</directory>
			<includes>
				<include>.htaccess</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>files</outputDirectory>
			<directory>src/files</directory>
			<includes>
				<include>.htaccess</include>
				<include>INSTALL-SelectMeAndClickEdit.txt</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>