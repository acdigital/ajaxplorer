<assembly xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src</directory>
			<includes>
				<include>*.php</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>classes</outputDirectory>
			<directory>src/classes</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>conf</outputDirectory>
			<directory>src/conf</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>doc</outputDirectory>
			<directory>src/doc</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>files</outputDirectory>
			<directory>src/files</directory>
			<includes>
				<include>.htaccess</include>
				<include>INSTALL-SelectMeAndClickEdit.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>images</outputDirectory>
			<directory>src/images</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>include</outputDirectory>
			<directory>src/include</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>users</outputDirectory>
			<directory>src/users</directory>
			<includes>
				<include>.htaccess</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>