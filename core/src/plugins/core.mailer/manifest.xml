<?xml version="1.0" encoding="UTF-8"?>
<ajxp_plugin id="core.mailer" label="Mailer Core config" description="" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:../core.ajaxplorer/ajxp_registry.xsd">
    <class_definition classname="AjxpMailer" filename="plugins/core.mailer/class.AjxpMailer.php"/>
