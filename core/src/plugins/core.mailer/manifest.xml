        <resources>
            <js className="AjxpMailer" file="plugins/core.mailer/class.AjxpMailer.js" autoload="true"/>
        </resources>
    </client_settings>
    <registry_contributions>
        <actions>
            <action name="send_mail">
                <processing>
                    <serverCallback methodName="sendMailAction"/>
                </processing>
            </action>
        </actions>
    </registry_contributions>
</ajxp_plugin>