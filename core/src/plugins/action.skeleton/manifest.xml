<?xml version="1.0" encoding="UTF-8"?>
<action name="skeleton" enabled="false" label="Skeleton Plugin" description="This is an empty container to demonstrate the basics of plugins coding." >
    <server_settings>
        <!--
        exposed : Whether this parameter value will be sent to the client, i.e exposed to the world
        name    : technical name of the parameter
        type    : "string", "boolean", "textarea", "password", "select" (in the later case, one must find the choices attribute)
        label   : displayed in the GUI
        description : ...
        mandatory : must be non empty
        default : a default value
        -->
        <global_param exposed="true" name="BUTTON_TARGET_URL" type="string" label="Target Url" description="The target URL of the button that will be added to the application" mandatory="true" default="http://www.ajaxplorer.info"/>

    </server_settings>

	<registry_contributions>
		<client_configs uuidAttr="name">
			<template name="bottom" element="ajxp_desktop" position="after"><![CDATA[
				<div id="optional_bottom_div">Your custom footer content</div>
			]]></template>
			<template name="head" element="ajxp_desktop" position="top"><![CDATA[
				<div id="optional_header_div" style="border: 1px solid black;">Your custom header content</div>
			]]></template>
		</client_configs>
	</registry_contributions>
	<class_definition filename="plugins/action.skeleton/class.PluginSkeleton.php" classname="HookDemo"/>
</action>