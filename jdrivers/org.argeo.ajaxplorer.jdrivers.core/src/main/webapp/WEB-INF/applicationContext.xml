<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
	default-lazy-init="true">

	<bean id="driver.file"
		class="org.argeo.ajaxplorer.jdrivers.SimpleDriver">
		<property name="actions">
			<map>
				<entry key="ls" value-ref="action.file.ls" />
			</map>
		</property>
	</bean>

	<bean id="fileDriverContext"
		class="org.argeo.ajaxplorer.jdrivers.file.FileDriverContext">
		<property name="basePath"
			value="/Users/mbaudier/dev/AjaXplorer/test" />
	</bean>


	<bean id="action.file.ls"
		class="org.argeo.ajaxplorer.jdrivers.file.FileLsAction">
		<property name="fileDriverContext" ref="fileDriverContext" />
	</bean>

</beans>